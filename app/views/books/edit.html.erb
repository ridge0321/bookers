<h1>Editing Book</h1>

<%= form_with model: @book, local:true do |f| %>
  <div class="field">
    <h4>タイトル</h4>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h4>本文</h4>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>

  <%= link_to "Show", book_path %>
  |
  <%= link_to "Back", books_path %>

<% end %>